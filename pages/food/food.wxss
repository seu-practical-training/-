/* pages/food/food.wxss */
.title{
    width: 100%;
    height: 270px;
    background-size: 100% 100%;
}

.page_bd2{
    width: 100%;
    height: 60px;
    background-size: 100% 100%;
}

.commodity{
  background-color: rgb(39,57,74);
  height:2750px;
  width:100%;
}

.category-title text{
  font:Classical;
  color:#E3B470;
  font-size:23px;
}

.welfares{
  display: flex;
  justify-content: left;
  flex-direction: row;
  flex-wrap: wrap;
  margin:20px 5px;
}
.welfares-good{
  height: 280rpx; 
  width: 90%;
  margin:20px 55px;
  margin-bottom: 170px;
  position: relative;
  display: inline-block;
  font-size: 24rpx;
}
.welfares-image{
  width:90%; 
  /* display: inline-block; */
  border: 1px #888 ridge; 
}
.welfares-good .product-name{
  color: white;
  height: 15px;
  text-align:left;
   margin: 10px 5px; 
   margin-bottom: 10px; 
   font-size:15px;
}
.product-price-wrap .product-price-new{
  color: #e80080;
  margin-left:5px;
  font-weight:500;
}
.product-price-wrap .product-price-old{
  color: #888;
  text-decoration: line-through;
  padding-left: 2px;
}
.product-price-wrap .discount{
  position: absolute;
  right: 5px;
  background-color: #000;
  color: #E3B470;
}

.end{
  display: flex;
  align-items: center;
  justify-content: center;
  color:grey;
  font-size:13px;
}

